# Firebase Service Account
FIREBASE_SERVICE_ACCOUNT_PATH=./serviceAccountKey.json

# Enable debug logging
DEBUG=false

# Web Dashboard (always enabled)
WEB_PORT=5005

# === NOTIFICATION CHANNELS ===
# Enable the channels you want to use (true/false)

# 1. Webhook (Slack, Discord, Teams, etc.)
ENABLE_WEBHOOK=false
WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
WEBHOOK_TYPE=slack  # Options: slack, discord, teams, generic

# 2. Email
ENABLE_EMAIL=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=Betting App <your-email@gmail.com>
EMAIL_TO=recipient@example.com

# 3. Telegram
ENABLE_TELEGRAM=false
TELEGRAM_BOT_TOKEN=your-bot-token
TELEGRAM_CHAT_ID=your-chat-id

# 4. Custom Webhook (POST JSON to any endpoint)
ENABLE_CUSTOM_WEBHOOK=false
CUSTOM_WEBHOOK_URL=https://your-api.com/notifications
CUSTOM_WEBHOOK_HEADERS={"Authorization": "Bearer token"}
